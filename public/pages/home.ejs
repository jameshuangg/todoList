<div class="col-lg-offset-3 col-lg-6 col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10 col-xs-12">
	<div>
		<h1 class="col-xs-6">TodoList</h1>
		<div class="col-xs-6">
			<h2 class="userDetail">{{main.currentUser()}}</span>
			<h2 class="userDetail logout" ng-click="main.logout()"> Logout</span>
		</div>

	</div>
	<form ng-submit="main.addTodo()">
		<input class="col-xs-12 inputField" placeholder="Add a todo here." ng-model="main.inputedDescription">
	</form>
	
	<div class="col-xs-12 activeTodos-container" ng-repeat="todo in main.todos | orderBy: todo.dateCreated">
		<div class="col-xs-11 activeTodos-description">{{todo.description}} {{todo.dateCreated}}</div>
		<div class="col-xs-1 activeTodos-checkbox">
			<input ng-click="main.deleteTodo(todo)" class="checkbox" type="checkbox">
		</div>
	</div>
</div>